{
  "name": "@umami/shiso",
  "version": "0.55.0",
  "description": "A content layer for Next.js",
  "homepage": "https://shiso.umami.is",
  "repository": {
    "type": "git",
    "url": "https://github.com/umami-software/shiso.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "server",
    "styles.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "next dev --port 8001 --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "icons": "svgr ./src/assets --out-dir src/components/svg --typescript",
    "components": "tsc -p tsconfig.components.json",
    "server": "tsc -p tsconfig.server.json",
    "esbuild": "node esbuild.mjs",
    "dts": "node dts.mjs",
    "css": "node css.mjs",
    "bundle": "npm-run-all components server dts esbuild css"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@orama/orama": "^3.1.16",
    "@umami/react-zen": "^0.203.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.546.0",
    "next": "^15.3.3",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recursive-readdir": "^2.2.3",
    "rehype-highlight": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "thenby": "^1.3.4"
  },
  "devDependencies": {
    "@svgr/cli": "^8.1.0",
    "@types/css-modules": "^1.0.5",
    "@types/mdx": "^2.0.11",
    "@types/node": "^22.18.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@umami/esbuild-plugin-css-modules": "^0.4.0",
    "dts-bundle": "^0.7.3",
    "esbuild": "^0.25.11",
    "esbuild-plugin-css-modules": "^0.3.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.1",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^14.0.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
